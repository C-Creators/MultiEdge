---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { createServerClient } from '../../lib/supabase';

// Check authentication
const supabase = createServerClient(Astro.cookies);
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

let session = null;

if (accessToken && refreshToken) {
  const { data } = await supabase.auth.setSession({
    access_token: accessToken,
    refresh_token: refreshToken
  });
  session = data.session;
}

if (!session) {
  return Astro.redirect('/admin/login');
}

// Fetch analytics from site_analytics table (if exists)
const { data: analyticsData } = await supabase
  .from('site_analytics')
  .select('*')
  .order('date', { ascending: false })
  .limit(30);

// Demo data for when no real data exists
const demoData = {
  visitors: 1247,
  pageviews: 4523,
  bounceRate: 42,
  avgDuration: '2m 34s',
  topPages: [
    { page: '/', views: 1823, visitors: 892 },
    { page: '/#about', views: 654, visitors: 321 },
    { page: '/#philosophy', views: 432, visitors: 234 },
    { page: '/#systems', views: 387, visitors: 198 },
    { page: '/#brokers', views: 312, visitors: 156 },
  ],
  topSources: [
    { source: 'Google', visitors: 523 },
    { source: 'Direct', visitors: 412 },
    { source: 'Twitter', visitors: 187 },
    { source: 'Facebook', visitors: 89 },
    { source: 'LinkedIn', visitors: 36 },
  ],
  dailyVisitors: [
    { date: '2024-01-10', visitors: 89 },
    { date: '2024-01-11', visitors: 112 },
    { date: '2024-01-12', visitors: 98 },
    { date: '2024-01-13', visitors: 67 },
    { date: '2024-01-14', visitors: 45 },
    { date: '2024-01-15', visitors: 156 },
    { date: '2024-01-16', visitors: 178 },
  ]
};

const hasRealData = analyticsData && analyticsData.length > 0;
---

<AdminLayout title="Analytics">
  <div class="analytics-page">
    {!hasRealData && (
      <div class="demo-notice">
        <i data-lucide="info"></i>
        <div>
          <strong>Demo Data</strong>
          <p>Connect an analytics provider or create a <code>site_analytics</code> table in Supabase to see real data.</p>
        </div>
      </div>
    )}
    
    <!-- Date Range Selector -->
    <div class="analytics-header">
      <div class="date-range">
        <button class="range-btn active" data-range="7d">7 Days</button>
        <button class="range-btn" data-range="30d">30 Days</button>
        <button class="range-btn" data-range="90d">90 Days</button>
      </div>
      <div class="header-actions">
        <a href="https://plausible.io" target="_blank" class="btn-secondary">
          <i data-lucide="external-link"></i>
          Try Plausible
        </a>
        <a href="https://umami.is" target="_blank" class="btn-secondary">
          <i data-lucide="external-link"></i>
          Try Umami
        </a>
      </div>
    </div>
    
    <!-- Stats Overview -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon visitors">
          <i data-lucide="users"></i>
        </div>
        <div class="stat-content">
          <span class="stat-value">{demoData.visitors.toLocaleString()}</span>
          <span class="stat-label">Unique Visitors</span>
          <span class="stat-trend positive">
            <i data-lucide="trending-up"></i>
            +12.5%
          </span>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon pageviews">
          <i data-lucide="eye"></i>
        </div>
        <div class="stat-content">
          <span class="stat-value">{demoData.pageviews.toLocaleString()}</span>
          <span class="stat-label">Page Views</span>
          <span class="stat-trend positive">
            <i data-lucide="trending-up"></i>
            +8.3%
          </span>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon bounce">
          <i data-lucide="log-out"></i>
        </div>
        <div class="stat-content">
          <span class="stat-value">{demoData.bounceRate}%</span>
          <span class="stat-label">Bounce Rate</span>
          <span class="stat-trend negative">
            <i data-lucide="trending-down"></i>
            -3.2%
          </span>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon duration">
          <i data-lucide="clock"></i>
        </div>
        <div class="stat-content">
          <span class="stat-value">{demoData.avgDuration}</span>
          <span class="stat-label">Avg. Duration</span>
          <span class="stat-trend positive">
            <i data-lucide="trending-up"></i>
            +15s
          </span>
        </div>
      </div>
    </div>
    
    <!-- Charts Row -->
    <div class="charts-row">
      <div class="chart-card">
        <h3><i data-lucide="trending-up"></i> Visitors Over Time</h3>
        <canvas id="visitorsChart"></canvas>
      </div>
    </div>
    
    <!-- Tables Row -->
    <div class="tables-row">
      <div class="table-card">
        <h3><i data-lucide="file-text"></i> Top Pages</h3>
        <table>
          <thead>
            <tr>
              <th>Page</th>
              <th>Views</th>
              <th>Visitors</th>
            </tr>
          </thead>
          <tbody>
            {demoData.topPages.map(page => (
              <tr>
                <td class="page-name">{page.page}</td>
                <td>{page.views.toLocaleString()}</td>
                <td>{page.visitors.toLocaleString()}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
      
      <div class="table-card">
        <h3><i data-lucide="share-2"></i> Top Sources</h3>
        <table>
          <thead>
            <tr>
              <th>Source</th>
              <th>Visitors</th>
              <th>%</th>
            </tr>
          </thead>
          <tbody>
            {demoData.topSources.map(source => {
              const percentage = ((source.visitors / demoData.visitors) * 100).toFixed(1);
              return (
                <tr>
                  <td class="source-name">{source.source}</td>
                  <td>{source.visitors.toLocaleString()}</td>
                  <td>
                    <div class="percentage-bar">
                      <div class="bar-fill" style={`width: ${percentage}%`}></div>
                      <span>{percentage}%</span>
                    </div>
                  </td>
                </tr>
              );
            })}
          </tbody>
        </table>
      </div>
    </div>
    
    <!-- Analytics Integration Guide -->
    <div class="integration-guide">
      <h3><i data-lucide="puzzle"></i> Analytics Integration Options</h3>
      <div class="options-grid">
        <div class="option-card">
          <div class="option-logo">
            <i data-lucide="bar-chart-2"></i>
          </div>
          <h4>Plausible Analytics</h4>
          <p>Privacy-friendly, lightweight, and open-source. No cookies required.</p>
          <a href="https://plausible.io/docs" target="_blank" class="option-link">View Docs →</a>
        </div>
        
        <div class="option-card">
          <div class="option-logo">
            <i data-lucide="activity"></i>
          </div>
          <h4>Umami</h4>
          <p>Self-hosted, privacy-focused web analytics alternative to Google Analytics.</p>
          <a href="https://umami.is/docs" target="_blank" class="option-link">View Docs →</a>
        </div>
        
        <div class="option-card">
          <div class="option-logo">
            <i data-lucide="database"></i>
          </div>
          <h4>Custom (Supabase)</h4>
          <p>Build your own analytics using Supabase edge functions and database.</p>
          <a href="https://supabase.com/docs/guides/functions" target="_blank" class="option-link">View Docs →</a>
        </div>
        
        <div class="option-card">
          <div class="option-logo">
            <i data-lucide="line-chart"></i>
          </div>
          <h4>Vercel Analytics</h4>
          <p>Built-in analytics if you're hosting on Vercel. Zero configuration.</p>
          <a href="https://vercel.com/docs/analytics" target="_blank" class="option-link">View Docs →</a>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script define:vars={{ demoData }}>
  // Initialize chart
  document.addEventListener('DOMContentLoaded', () => {
    const ctx = document.getElementById('visitorsChart');
    
    if (ctx && typeof Chart !== 'undefined') {
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: demoData.dailyVisitors.map(d => {
            const date = new Date(d.date);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
          }),
          datasets: [{
            label: 'Visitors',
            data: demoData.dailyVisitors.map(d => d.visitors),
            borderColor: '#c9a227',
            backgroundColor: 'rgba(201, 162, 39, 0.1)',
            tension: 0.4,
            fill: true,
            pointBackgroundColor: '#c9a227',
            pointBorderColor: '#fff',
            pointBorderWidth: 2,
            pointRadius: 4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false
            }
          },
          scales: {
            x: {
              grid: {
                display: false
              }
            },
            y: {
              beginAtZero: true,
              grid: {
                color: '#f3f4f6'
              }
            }
          }
        }
      });
    }
    
    // Date range buttons
    document.querySelectorAll('.range-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.range-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        // In a real implementation, this would fetch new data
      });
    });
  });
</script>

